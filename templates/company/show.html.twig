{% extends 'base.html.twig' %}

{% block body %}
    <div class=" bg-transparent">
        <div class="card-body text-center">
            <h2 class="card-title bg-info p-2 text-light">{{ company.name|upper }}</h2>
        </div>
        <div class="card-body">
            <h5 class="card-text"><b>{{ 'company.nip'|trans([], 'labels')|upper }}: </b> {{ company.nip }} </h5>
        </div>
        <div class="card-body">
            <h5 class="card-text"><b>{{ 'company.regon'|trans([], 'labels')|upper }}: </b> Regon: {{ company.regon }} </h5>
        </div>
        <div class="card-body">
            <h5 class="card-text"><b>{{ 'company.accountNumber'|trans([], 'labels')|upper }}: </b> {{ company.accountNumber }}</h5>
        </div>
        <div class="card-body">
            <h5 class="card-text"><b>{{ 'company.address'|trans([], 'labels')|upper }}: </b> 
            {{ company.street }} {{ company.stNumber }} {{ company.postCode }} {{ company.city }}</h5>
        </div>
        <div class="card-body">
            <a class="btn btn-primary" href="{{ path('app_company_list') }}" role="button">
                {{ 'goBackList'|trans([], 'labels')|upper }}
            </a>
        </div>
    </div>
{% endblock %}