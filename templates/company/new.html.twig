{% extends 'base.html.twig' %}

{% block title %}{{ app.user.name|upper }}{% endblock %}

{% block body %}
    {% for message in app.flashes('noCompany') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}
    <h3> Dane firmy </h3>
    {{ form_start(companyForm) }}
        {{ form_row(companyForm.name) }}
        {{ form_row(companyForm.nip) }}
        {{ form_row(companyForm.regon) }}
        <div class="row">
            <div class="col-lg-8">
                {{ form_row(companyForm.city) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(companyForm.postCode) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                {{ form_row(companyForm.street) }}
            </div>
            <div class="col-lg-2">
                {{ form_row(companyForm.houseNumber) }}
            </div>
            <div class="col-lg-2">
                {{ form_row(companyForm.localNumber) }}
            </div>
        </div>
        {{ form_row(companyForm.accountNumber) }}
        <div class="text-right sticky-position">
            <button type="submit" class="btn btn-primary ">{{ 'button.create'|trans([], 'main')|upper }}</button>
        </div>
        <input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}"/>
    {{ form_end(companyForm) }}
{% endblock %}